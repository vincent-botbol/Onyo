.PHONY: clean

PATHOBROWSER=~/obrowser-1.1.1/
TARGET=stonehenge

all: $(TARGET).exe.uue

$(TARGET).exe: stoneh.ml
	@CAMLLIB=~/obrowser-1.1.1/rt/caml ocamlc -c alphabeta.ml
	@CAMLLIB=~/obrowser-1.1.1/rt/caml ocamlc -c stoneh.ml
	@CAMLLIB=~/obrowser-1.1.1/rt/caml ocamlc alphabeta.cmo stoneh.cmo -o $@

%.uue: %
	@echo "[UUENCODE] $@"
	@uuencode $^ stdout > $@

clean:
	@echo "[CLEAN]"
	@rm -f *.cm* *~ *.exe *.uue
